{
  "name": "@trainerroad/trc-core",
  "version": "0.1.0",
  "description": "TrainerRoad's component library (core)",
  "main": "dist/index.js",
  "license": "MIT",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:main": "rollup -c --watch",
